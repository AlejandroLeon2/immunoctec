---
import Boton from "./Boton.astro";
import type { whatsapp } from "../types/tipos";
import Title from "./Title.astro";
interface Props {
  consultorImage?: string;
  teamImage?: string;
  consultorName?: string;
  whatsapp?: whatsapp;
}

const {
  consultorImage = "/images/soledad.jpeg",
  teamImage = "/images/viaje.webp",
  consultorName = "Soledad Morales",
  whatsapp,
} = Astro.props;

const immunotecOpportunity = {
  title: "¿Listo para emprender con propósito?",
  intro:
    "Si eres un emprendedor apasionado por la salud y el bienestar, Immunotec te ofrece una oportunidad única para transformar vidas —incluida la tuya— mientras generas ingresos sostenibles.",
  incomeMethods: 7,
  benefits: [
    "Productos patentados y científicamente validados",
    "Más de 45 años de investigación científica",
    "Immunocal: más de 25 años en el mercado",
    "Expansión global y conocimiento compartido",
    "Oportunidad empresarial escalable",
    "Cumple tus metas personales y profesionales",
  ],
  callToAction: {
    headline: "Te acompaño en tu camino emprendedor",
    message:
      "Soy un emprendedor comprometido con el bienestar integral. Si estás listo para dar el salto, te guiaré con mi experiencia, resultados y estrategias probadas. Juntos podemos construir un negocio sólido, ético y con propósito.",
  },
};

const stats = [
  { number: "45+", label: "Años de investigación" },
  { number: "25+", label: "Años en el mercado" },
  { number: "7", label: "Formas de generar ingresos" },
];
---

<section id="emprende" class={`scroll-mt-24 py-12 relative overflow-hidden`}>
  <div class="container mx-auto px-4 max-w-6xl relative z-10">
    <div class="text-center mb-12 space-y-4">
      <Title titulo={immunotecOpportunity.title} />
      <p
        class="text-base lg:text-lg text-gray-700 max-w-3xl mx-auto leading-relaxed"
      >
        {immunotecOpportunity.intro}
      </p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-4 lg:gap-8 mb-12 max-w-3xl mx-auto">
      {
        stats.map((stat) => (
          <div class="text-center bg-white rounded-xl py-6 px-4">
            <div class="text-3xl lg:text-4xl font-bold text-[#2584FF] mb-2">
              {stat.number}
            </div>
            <div class="text-xs lg:text-sm text-gray-600 font-medium">
              {stat.label}
            </div>
          </div>
        ))
      }
    </div>

    <!-- Imagen del equipo + Beneficios -->
    <div class="mb-12">
      <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 text-center mb-8">
        ¿Por qué Immunotec?
      </h3>

      <div class="grid lg:grid-cols-2 gap-4 items-center mb-8">
        <div class="">
          <img
            src={teamImage}
            alt="Equipo Immunotec celebrando éxitos juntos"
            class="w-full rounded-2xl object-center h-60 sm:h-80 md:h-90 lg:max-h-80 object-cover"
            loading="lazy"
          />

          <p class="text-sm text-gray-600 text-center mt-3 italic">
            Únete a una comunidad global de emprendedores exitosos
          </p>
        </div>

        <!-- Beneficios -->
        <ul class="space-y-2 order-2 lg:order-1">
          {
            immunotecOpportunity.benefits.map((benefit) => (
              <li class="flex items-start gap-2 bg-white rounded-lg p-2">
                <span class="w-6 h-6 rounded-full bg-[#2584FF] flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg
                    class="w-4 h-4 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="3"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                </span>
                <p class="text-sm lg:text-base text-gray-700 font-medium leading-snug">
                  {benefit}
                </p>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- CTA Personal con imagen del consultor -->
    <div class="relative">
      <!-- Patrón decorativo -->

      <div class="grid lg:grid-cols-5 gap-8 items-center relative z-10">
        <!-- Imagen del consultor -->
        <div class="lg:col-span-2 ">
          <img
            src={consultorImage}
            alt={`${consultorName} - Tu mentor en Immunotec`}
            class="w-full h-auto object-cover rounded-sm"
            loading="lazy"
          />
        </div>

        <!-- Contenido CTA -->
        <div class="lg:col-span-3 p-4 lg:pr-10 text-black">
          <div class="flex flex-col  items-center md:flex-row md:gap-2">
            <span
              class=" w-13 md:w-9 h-auto md:h-9 p-2 bg-[#2584FF] rounded-full flex items-center justify-center mb-6"
            >
              <svg
                class=" w-9  h-auto    text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </span>

            <h3 class="text-2xl lg:text-3xl font-bold mb-4 tracking-tight">
              {immunotecOpportunity.callToAction.headline}
            </h3>
          </div>

          <p class="text-base lg:text-lg text-gray-700 leading-relaxed mb-6">
            {immunotecOpportunity.callToAction.message}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 mb-6">
            <a
              href="#contacto"
              class="inline-flex items-center justify-center gap-2 bg-bases hover:bg-bases-hover text-white font-semibold px-6 py-3 rounded-xl transition-colors"
            >
              Quiero conocer más
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>

            <Boton
              texto="Hablemos por WhatsApp"
              extra="bg-green-600 flex gap-2 items-center"
              whatsapp={whatsapp}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                ></path>
              </svg>
            </Boton>
          </div>

          <p class="text-sm text-gray-700">
            Sin compromisos. Solo una conversación sincera sobre tu futuro.
          </p>

          <div class="mt-6 pt-6 border-t border-gray-700">
            <p class="text-base font-semibold text-bases">
              {consultorName}
            </p>
            <p class="text-sm text-gray-700">
              Consultor Independiente Immunotec
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Testimonio rápido -->
    <div class="mt-12 text-center">
      <blockquote
        class="text-lg lg:text-xl text-gray-700 italic max-w-3xl mx-auto"
      >
        "El verdadero éxito no está solo en generar ingresos, sino en crear
        impacto positivo en la vida de otros mientras construyes tu libertad
        financiera."
      </blockquote>
      <p class="text-sm text-gray-600 mt-4 font-medium">
        — {consultorName}
      </p>
    </div>
  </div>
</section>
