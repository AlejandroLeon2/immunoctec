---
import SliderDeportistas from "./SliderDeportistas.astro";
import Title from "../components/Title.astro";
import type { Producto } from "../types/tipos";
import type { Testimonial } from "../types/tipos";
import Boton from "./Boton.astro";

interface Props {
  fondo?: string;
  suplemento: Producto;
  reverse?: boolean;
  variant?: 'default' | 'featured' | 'minimal' | 'video-first';
  testimonials:Testimonial[];
}

const { fondo, suplemento, reverse = false, variant = 'default', testimonials } = Astro.props;

const isVideoFirst = variant === 'video-first' || suplemento.nombre === 'Immunocal Sport';
const isFeatured = variant === 'featured' || suplemento.nombre === 'Immunocal Platinum';
---

{isVideoFirst ? (
  <!-- Layout: Video Primero (Deportivo/Dinámico) -->
  <section class={`${fondo ? fondo : suplemento.color} py-12  relative overflow-hidden`}>

    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
{
  suplemento.linkVideo &&(

      <div class="mb-12 lg:mb-16">
        <div class=" flex overflow-hidden ">
          <div class="relative ">
            <iframe
              class=" min-h-60 top-0 left-0 w-full h-full"
              src={suplemento.linkVideo}
              title={`Video de ${suplemento.nombre}`}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              referrerpolicy="strict-origin-when-cross-origin"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
        </div>
      </div>
  )
}


      <div class="grid lg:grid-cols-2 gap-10 lg:gap-14 items-center">
        <div class={reverse ? "lg:order-2" : ""}>
          <div class="bg-white rounded-2xl  ">
            <img
              src={suplemento.imagen}
              alt={`imagen de ${suplemento.nombre}`}
              title={`imagen de ${suplemento.nombre}`}
              class="w-full h-72 object-contain"
              loading="lazy"
            />
          </div>
        </div>

        <div class={reverse ? "lg:order-1" : ""}>
          <Title titulo={suplemento.nombre} />
          {suplemento.titulo && (
            <p class="text-xl lg:text-2xl text-gray-800 mt-4 mb-6 font-semibold leading-snug tracking-tight">
              {suplemento.titulo}
            </p>
          )}
          
          <div class="space-y-5">
            {suplemento.descripcion
              .split("/n")
              .map((linea) => (
                <p class="text-base lg:text-lg text-gray-700 leading-relaxed">
                  {linea.split("*").map((fragmento, j) =>
                    j % 2 === 1 ? (
                      <span class="font-bold text-gray-900">{fragmento}</span>
                    ) : (
                      fragmento
                    )
                  )}
                </p>
              ))}
          </div>

          <div class="mt-8">
            <Boton url={suplemento.urlPagina} pagina={true} texto={suplemento.textoBoton} />
          </div>
        </div>
      </div>

      {suplemento.beneficios && suplemento.beneficios.length > 0 && (
        <div class="mt-16 bg-white rounded-2xl p-8 ">
          <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-8 text-center tracking-tight">
            ¿Por qué elegir {suplemento.nombre}?
          </h3>
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
            {suplemento.beneficios.map((item) => (
              <div class="flex items-start gap-4 bg-gray-50 rounded-xl p-2 hover:shadow-md transition-shadow border border-gray-200 hover:border-[#2584FF]">
                <div class="w-7 h-7 rounded-full bg-[#2584FF] flex items-center justify-center flex-shrink-0 mt-0.5 shadow-sm">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <p class="text-sm lg:text-base text-gray-700 leading-relaxed">{item}</p>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </section>
    <SliderDeportistas
      testimonials={testimonials}
    />

) : isFeatured ? (
  <!-- Layout: Destacado Premium -->
  <section class={`${fondo ? fondo : suplemento.color} py-12  relative`}>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      
      <div class="text-center mb-14">
        <span class="inline-block  text-white text-xs font-bold px-5 py-2 rounded-full uppercase tracking-widest mb-5">
          Premium
        </span>
        <Title titulo={suplemento.nombre} />
        {suplemento.titulo && (
          <p class="text-xl lg:text-2xl text-gray-700 mt-5 font-semibold max-w-3xl mx-auto leading-snug tracking-tight">
            {suplemento.titulo}
          </p>
        )}
      </div>

      <div class=" ">
        <div class="grid lg:grid-cols-2">
          <div class="relative h-[400px] lg:h-auto">
            <img
              src={suplemento.imagen}
              alt={`imagen de ${suplemento.nombre}`}
              title={`imagen de ${suplemento.nombre}`}
              class={`w-full h-full object-cover ${
                suplemento.nombre === "Immunocal Platinum" ? "object-bottom" : ""
              }`}
              loading="lazy"
            />
          </div>

          <div class="p-4  lg:p-14">
            <div class="space-y-5">
              {suplemento.descripcion
                .split("/n")
                .map((linea) => (
                  <p class="text-base lg:text-lg text-gray-700 leading-relaxed">
                    {linea.split("*").map((fragmento, j) =>
                      j % 2 === 1 ? (
                        <span class="font-bold text-gray-900  px-1 rounded">{fragmento}</span>
                      ) : (
                        fragmento
                      )
                    )}
                  </p>
                ))}
            </div>

            {suplemento.beneficios && suplemento.beneficios.length > 0 && (
              <div class="mt-4 pt-8 border-t-2 border-gray-200">
                <h3 class="text-xl lg:text-2xl font-bold text-gray-900 mb-6 tracking-tight">
                  Beneficios exclusivos
                </h3>
                <div class="space-y-4">
                  {suplemento.beneficios.slice(0, 5).map((item) => (
                    <div class="flex items-start gap-4">
                   <div class="w-6 h-6 rounded-full bg-[#2584FF] flex items-center justify-center flex-shrink-0 mt-0.5 shadow-sm">
                      <svg class="w-3.5 h-3.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                      <p class="text-sm lg:text-base text-gray-700 leading-relaxed">{item}</p>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <div class="mt-10">
              <Boton url={suplemento.urlPagina} pagina={true} texto={suplemento.textoBoton} />
            </div>
          </div>
        </div>
      </div>

      {suplemento.linkVideo && (
        <div class="mt-10">
          <div class="bg-gray-900  overflow-hidden">
            <div class="relative">
              <iframe
                class=" min-h-50 md:min-h-100  w-full h-full"
                src={suplemento.linkVideo}
                title={`Video de ${suplemento.nombre}`}
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                referrerpolicy="strict-origin-when-cross-origin"
                allowfullscreen
                loading="lazy"
              ></iframe>
            </div>
          </div>
        </div>
      )}
    </div>
  </section>

) : (
  <!-- Layout: Default Balanceado -->
  <section class={`${fondo ? fondo : suplemento.color}  py-12`}>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      
      <div class="text-center mb-12 lg:mb-16">
        <Title titulo={suplemento.nombre} />
        {suplemento.titulo && (
          <p class="text-xl lg:text-2xl text-gray-700 mt-4 font-semibold max-w-3xl mx-auto leading-snug tracking-tight">
            {suplemento.titulo}
          </p>
        )}
      </div>

      <div class={`grid lg:grid-cols-2 gap-10 lg:gap-14 items-center mb-12 ${reverse ? 'lg:flex-row-reverse' : ''}`}>
        
        <div class={reverse ? "lg:order-2" : "lg:order-1"}>
          <div class=" gap-8 space-y-4  overflow-hidden transition-shadow duration-300 ">
            <img
              src={suplemento.imagen}
              alt={`imagen de ${suplemento.nombre}`}
              title={`imagen de ${suplemento.nombre}`}
              class={`w-full h-80 object-cover object-bottom ${
                suplemento.nombre === "Immunocal Platinum" ? "object-bottom" : ""
              }`}
              loading="lazy"
            />
                  {suplemento.linkVideo && (
          <div class=" flex  overflow-hidden">
            <div class="relative  w-full ">
              <iframe
                class=" min-h-60 md:min-h-70   w-full h-full"
                src={suplemento.linkVideo}
                title={`Video de ${suplemento.nombre}`}
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                referrerpolicy="strict-origin-when-cross-origin"
                allowfullscreen
                loading="lazy"
              ></iframe>
            </div>
          </div>

      )}
          </div>
        </div>

        <div class={reverse ? "lg:order-1" : "lg:order-2"}>
          <div class="space-y-5">
            {suplemento.descripcion
              .split("/n")
              .map((linea) => (
                <p class="text-base lg:text-lg text-gray-700 leading-relaxed">
                  {linea.split("*").map((fragmento, j) =>
                    j % 2 === 1 ? (
                      <span class="font-bold text-gray-900">{fragmento}</span>
                    ) : (
                      fragmento
                    )
                  )}
                </p>
              ))}
          </div>

          {suplemento.beneficios && suplemento.beneficios.length > 0 && (
            <div class="mt-8 pt-8 border-t-2 border-gray-300">
              <h3 class="text-xl lg:text-2xl font-bold text-gray-900 mb-6 tracking-tight">
                Principales beneficios
              </h3>
              <div class="space-y-3">
                {suplemento.beneficios.slice(0, 4).map((item) => (
                  <div class="flex items-start gap-3">
                    <div class="w-6 h-6 rounded-full bg-[#2584FF] flex items-center justify-center flex-shrink-0 mt-0.5 shadow-sm">
                      <svg class="w-3.5 h-3.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                    <p class="text-sm lg:text-base text-gray-700 leading-relaxed">{item}</p>
                  </div>
                ))}
              </div>
            </div>
          )}

          <div class="mt-8">
            <Boton url={suplemento.urlPagina} pagina={true} texto={suplemento.textoBoton} />
          </div>
        </div>
      </div>


    </div>
  </section>
)}