---
import type { whatsapp } from "../types/tipos";
interface Props {
  extra?:string;
  url?: string;
  texto: string;
  whatsapp?: whatsapp;
}

const { url, texto, whatsapp, extra } = Astro.props;

const isWhatsApp = !!whatsapp;
const href = isWhatsApp
  ? `https://wa.me/+51${whatsapp.numero}?text=${encodeURIComponent(whatsapp.mensaje || "Hola, me interesa saber m√°s")}`
  : url;

const baseClass = "boton py-3 px-6  rounded-2xl text-white";
const variantClass = isWhatsApp
  ? "bg-bases hover:bg-bases-hover"
  : "bg-bases hover:bg-bases-hover";
---

{
  whatsapp ? (
    <a
      href={href}
      class={`${baseClass} ${variantClass} ${extra}`}
      target="_blank"
      rel="noopener noreferrer"
    >
      {texto}
    </a>
  ) : (
    <a
      href={href}
      class={`${baseClass} ${variantClass} ${extra}`}
    >
      {texto}
    </a>
  )
}
